{
  "extends": "tsconfig/base.json",

  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./constants",
    "./contracts",
    "./deploy",
    "./helpers",
    "./scripts",
    "./test",
    "./lib"
  ],
  "files": ["./hardhat.config.ts"],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./typechain/**", "@types", "../../node_modules/@types"]
}
